<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="@dimen/offset_10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    >



    <!--历史温度 年-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--年份-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_35dp">


            <TextView
                android:id="@+id/tv_item_temp_history_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/offset_15dp"
                android:textSize="@dimen/font_size_16sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/offset_0.5dp"
                android:background="@color/view_line"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>





        <!--月份-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_item_temp_history_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            />



    </LinearLayout>



</android.support.v7.widget.CardView>


