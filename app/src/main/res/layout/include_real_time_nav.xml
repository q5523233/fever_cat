<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <!--导航栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/offset_50dp"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <!--导航栏左边图标-->
        <ImageView
            android:id="@+id/iv_real_time_top_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_main_top_bar_bluetooth_dis"/>

        <!--标题-->
        <ImageView
            android:id="@+id/iv_real_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_main_top_bar_title"/>

        <ImageView
            android:id="@+id/iv_real_time_top_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_main_top_bar_share"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/iv_real_time_adjust"
            android:layout_width="@dimen/offset_35dp"
            android:layout_height="@dimen/offset_35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/icon_adjust"
            android:visibility="invisible"
            />


    </RelativeLayout>


</LinearLayout>