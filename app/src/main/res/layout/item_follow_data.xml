<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="70dp"
                                            android:clickable="true"
                                            android:paddingBottom="1dp"
                                            app:ios="false"
                                            app:leftSwipe="true"
                                            app:swipeEnable="true"
                                            android:layout_gravity="center"
                                            android:background="@color/white"
                                            android:layout_marginBottom="@dimen/offset_0.5dp"

    >

<RelativeLayout
    android:id="@+id/rl_item_follow_contain"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"

    >


    <com.nepo.fevercat.common.widget.circular.CircularImage
        android:id="@+id/iv_item_follow_user"
        android:layout_width="@dimen/offset_45dp"
        android:layout_height="@dimen/offset_45dp"
        android:background="@drawable/icon_login_qq"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/offset_10dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_item_follow_user"
        android:layout_marginLeft="@dimen/offset_10dp"
        >

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_05"
            android:textSize="@dimen/font_size_16sp"
            />

        <TextView
            android:id="@+id/tv_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_06"
            android:textSize="@dimen/font_size_14sp"
            />


    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_arrow_down"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/offset_10dp"
        />



</RelativeLayout>


    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/item_del_btn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/color_07"
        android:text="@string/del"
        android:textColor="@android:color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>