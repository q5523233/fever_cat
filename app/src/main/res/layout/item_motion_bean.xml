<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="70dp"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="@dimen/offset_0.5dp"
                                            android:background="@color/white"
                                            android:clickable="true"
                                            android:paddingBottom="1dp"
                                            app:ios="false"
                                            app:leftSwipe="true"
                                            app:swipeEnable="true"

    >

    <RelativeLayout
        android:id="@+id/rl_item_follow_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/offset_10dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_05"
                    android:textSize="@dimen/font_size_16sp"
                    />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_30dp"
                    android:textColor="@color/color_05"
                    android:textSize="@dimen/font_size_16sp"
                    />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/offset_30dp"
                    android:textColor="@color/color_05"
                    android:textSize="@dimen/font_size_16sp"
                    />
            </LinearLayout>


            <TextView

                android:id="@+id/tv_diagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_06"
                android:textSize="@dimen/font_size_14sp"
                />


        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/offset_10dp"
            android:background="@drawable/icon_arrow_down"
            />


    </RelativeLayout>


    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/item_del_btn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/color_07"
        android:text="@string/del"
        android:textColor="@android:color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>