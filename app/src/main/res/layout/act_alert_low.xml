<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_blue"
    >


    <include
        layout="@layout/include_top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_10"
        >

        <!--导航-->
        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/tab_alert_low"
            android:layout_width="match_parent"
            android:layout_height="@dimen/offset_50dp"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            tl:tl_indicator_height="@dimen/offset_1dp"
            tl:tl_underline_height="@dimen/offset_0dp"
            tl:tl_indicator_color="@color/nav_select"
            tl:tl_indicator_corner_radius="1.5dp"
            tl:tl_divider_width="@dimen/offset_1dp"
            tl:tl_divider_padding="@dimen/offset_15dp"
            tl:tl_divider_color="@color/view_line"
            />


        <FrameLayout
            android:id="@+id/fl_body_alert_low"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tab_alert_low"
            android:layout_marginTop="@dimen/offset_10dp"
            />



    </RelativeLayout>


</LinearLayout>